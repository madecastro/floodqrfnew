---
layout: layout.njk
title: {{ title }}
permalink: /
---

<section class="relative w-full bg-cover bg-center bg-no-repeat aspect-[3/2]" style="background-image: url('/images/hero.png')">
  <div class="absolute inset-0 bg-black bg-opacity-50 flex flex-col justify-center items-center text-center text-white px-4">
    <h1 class="text-5xl md:text-6xl font-bold mb-6">{{ hero.heading }}</h1>
    <p class="text-xl md:text-2xl text-gray-200">{{ hero.subheading }}</p>
  </div>
</section>


<section class="py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-4xl font-semibold mb-12">Our Services</h2>
    <div class="grid md:grid-cols-3 gap-12">
      {% for service in services %}
        <div class="flex flex-col items-center">
          {% if service.icon %}
            <img src="{{ service.icon }}" alt="{{ service.title }} Icon" class="h-32 mb-5" />
          {% endif %}
          <h3 class="font-bold text-2xl">{{ service.title }}</h3>
          <p class="text-lg text-gray-600 mt-3">{{ service.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="py-20">
  <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-2 gap-10 items-center">
    <div>
      <h3 class="text-3xl font-semibold mb-4">Service Area</h3>
      <p class="text-lg text-gray-700 mb-6">
        We serve all of San Diego County â€” fast response and reliable support.
      </p>
    </div>
    <iframe src="{{ map }}" class="rounded-lg w-full h-80 border" allowfullscreen="" loading="lazy"></iframe>
  </div>
</section>