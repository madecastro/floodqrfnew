  <div class="absolute inset-0 bg-black bg-opacity-50 flex flex-col justify-center items-center text-center text-white px-4">
    <h1 class="text-5xl md:text-6xl font-bold mb-6">{{ hero.heading }}</h1>
    <p class="text-xl md:text-2xl text-gray-200 mb-8">{{ hero.subheading }}</p>
