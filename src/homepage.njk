---
layout: layout.njk
title: {{ title }}
permalink: /
---

<section class="relative h-[100vh] bg-cover bg-center" style="background-image: url('/images/hero.png')">
  <div class="bg-black bg-opacity-50 h-full flex flex-col justify-center items-center px-4 text-center text-white">
    <h1 class="text-6xl md:text-7xl font-bold mb-6">{{ hero.heading }}</h1>
    <p class="text-2xl md:text-3xl text-gray-200">{{ hero.subheading }}</p>
  </div>
</section>

<section class="py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-4xl font-semibold mb-12">Our Services</h2>
    <div class="grid md:grid-cols-3 gap-12">
      {% for service in services %}
        <div class="flex flex-col items-center">
          {% if service.icon %}
            <img src="{{ service.icon }}" alt="{{ service.title }} Icon" class="h-32 mb-5" />
          {% endif %}
          <h3 class="font-bold text-2xl">{{ service.title }}</h3>
          <p class="text-lg text-gray-600 mt-3">{{ service.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="py-20">
  <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-2 gap-10 items-center">
    <div>
      <h3 class="text-3xl font-semibold mb-4">Service Area</h3>
      <p class="text-lg text-gray-700 mb-6">
        We serve all of San Diego County â€” fast response and reliable support.
      </p>
    </div>
    <iframe src="{{ map }}" class="rounded-lg w-full h-80 border" allowfullscreen="" loading="lazy"></iframe>
  </div>
</section>

<footer class="bg-gray-100 py-8 text-center text-lg">
  <p>&copy; 2025 {{ footer.company }}. All rights reserved.</p>
  <p class="mt-2">
    {{ footer.address }} | License #{{ footer.license }} | Phone:
    <a href="tel:{{ footer.phone }}" class="underline">{{ footer.phone }}</a>
  </p>
  <p class="mt-2">
    {% if footer.instagram %}<a href="{{ footer.instagram }}" class="underline">Instagram</a>{% endif %}
    {% if footer.instagram and footer.x %} | {% endif %}
    {% if footer.x %}<a href="{{ footer.x }}" class="underline">X</a>{% endif %}
  </p>
</footer>
