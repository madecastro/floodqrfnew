<section class="relative bg-blue-50 text-center py-12 px-4">
  <h1 class="text-4xl font-extrabold text-blue-900 mb-4">{{ hero.heading }}</h1>
  <p class="text-lg text-blue-800 mb-6">{{ hero.subheading }}</p>
  <a href="https://jobber.example.com/request-service" class="inline-block bg-blue-900 text-white px-6 py-3 rounded shadow hover:bg-blue-800">Request Service</a>
</section>

<section class="py-12 bg-white">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-2xl font-semibold text-blue-900 mb-8">Our Services</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {% for service in services %}
        <div class="flex flex-col items-center bg-gray-50 p-6 rounded shadow">
          {% if service.icon %}<img src="{{ service.icon }}" alt="{{ service.title }} Icon" class="h-16 mb-4" />{% endif %}
          <h3 class="font-bold text-lg text-blue-900">{{ service.title }}</h3>
          <p class="text-sm text-gray-700 mt-2">{{ service.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="py-12 bg-gray-100">
  <div class="max-w-5xl mx-auto px-4 grid md:grid-cols-2 gap-8 items-center">
    <div>
      <h3 class="text-xl font-semibold text-blue-900 mb-2">Service Area</h3>
      <p class="text-gray-700 mb-4">We serve all of San Diego County â€” fast response and reliable support.</p>
    </div>
    <iframe src="{{ map }}" class="rounded-lg w-full h-64 border" allowfullscreen="" loading="lazy"></iframe>
  </div>
</section>

<footer class="bg-blue-900 text-white py-6 text-center text-sm">
  <p>&copy; 2025 {{ footer.company }}. All rights reserved.</p>
  <p class="mt-2">
    {{ footer.address }} | License #{{ footer.license }} | Phone: <a href="tel:{{ footer.phone }}" class="underline">{{ footer.phone }}</a>
  </p>
  <p class="mt-2">
    {% if footer.instagram %}<a href="{{ footer.instagram }}" class="underline">Instagram</a>{% endif %}
    {% if footer.instagram and footer.x %} | {% endif %}
    {% if footer.x %}<a href="{{ footer.x }}" class="underline">X</a>{% endif %}
  </p>
</footer>