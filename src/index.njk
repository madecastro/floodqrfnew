---
layout: layout.njk
title: {{ homepage.title }}
---

<section class="relative">
  <div class="text-center py-12 px-4">
    <h1 class="text-4xl font-bold mb-4">{{ homepage.hero.heading }}</h1>
    <p class="text-lg text-gray-700">{{ homepage.hero.subheading }}</p>
  </div>
</section>

<section class="py-12 bg-gray-50">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-2xl font-semibold mb-8">Our Services</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {% for service in homepage.services %}
        <div class="flex flex-col items-center">
          {% if service.icon %}<img src="{{ service.icon }}" alt="{{ service.title }} Icon" class="h-16 mb-4" />{% endif %}
          <h3 class="font-bold text-lg">{{ service.title }}</h3>
          <p class="text-sm text-gray-600 mt-2">{{ service.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="py-12">
  <div class="max-w-5xl mx-auto px-4 grid md:grid-cols-2 gap-8 items-center">
    <div>
      <h3 class="text-xl font-semibold mb-2">Service Area</h3>
      <p class="text-gray-700 mb-4">We serve all of San Diego County â€” fast response and reliable support.</p>
    </div>
    <iframe src="{{ homepage.map }}" class="rounded-lg w-full h-64 border" allowfullscreen="" loading="lazy"></iframe>
  </div>
</section>

<footer class="bg-gray-100 py-6 text-center text-sm">
  <p>&copy; 2025 {{ homepage.footer.company }}. All rights reserved.</p>
  <p class="mt-2">
    {{ homepage.footer.address }} | License #{{ homepage.footer.license }} | Phone: <a href="tel:{{ homepage.footer.phone }}">{{ homepage.footer.phone }}</a>
  </p>
  <p class="mt-2">
    {% if homepage.footer.instagram %}<a href="{{ homepage.footer.instagram }}" class="underline">Instagram</a>{% endif %}
    {% if homepage.footer.instagram and homepage.footer.x %} | {% endif %}
    {% if homepage.footer.x %}<a href="{{ homepage.footer.x }}" class="underline">X</a>{% endif %}
  </p>
</footer>
