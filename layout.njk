<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title or "Flood QRF - San Diegoâ€™s Restoration Experts" }}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />

    <meta name="description" content="San Diego County's trusted water restoration experts â€” Flood QRF. Fast, veteran-owned response for water damage, sewage, and emergencies." />
    <meta property="og:title" content="Flood QRF - San Diegoâ€™s Restoration Experts" />
    <meta property="og:description" content="Fast, reliable water damage response for San Diego County. Veteran-owned and operated." />
    <meta property="og:image" content="/images/hero.png" />
    <meta property="og:url" content="https://floodqrf.com/" />

    <style>
      /* Prevent layout shift when mobile menu opens */
      [x-cloak] { display: none !important; }
    </style>
  </head>
  <body class="bg-white text-gray-900 font-sans">
    {# ---------- Safe defaults (so non-home pages don't break) ---------- #}
    {% set _footer = footer or (site and site.footer) or {} %}
    {% set company = _footer.company or "Flood QRF Inc." %}
    {% set address = _footer.address or "" %}
    {% set phone_display = _footer.phone or "(949) 324-3565" %}
    {% set phone_tel = phone_display | replace("(", "") | replace(")", "") | replace(" ", "") | replace("-", "") %}
    {% set license = _footer.license or "" %}
    {% set email = _footer.email or "support@floodqrf.com" %}
    {% set instagram = _footer.instagram or "" %}
    {% set x_url = _footer.x or "" %}
    {% set jobber = _footer.jobber or "https://jobber.page.link/YourJobberLinkHere" %}

    <!-- HEADER -->
    <header class="fixed top-0 left-0 w-full z-50 bg-blue-900 text-white shadow-md h-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 h-full flex items-center justify-between">
        <a href="/" class="flex items-center space-x-3" aria-label="Flood QRF home">
          <img src="/images/logo.png" alt="Flood QRF Logo" class="h-12 w-auto" />
          <span class="text-xl md:text-2xl font-bold tracking-tight">Flood QRF</span>
        </a>

        <!-- Desktop nav -->
        <nav class="hidden md:flex items-center space-x-6 text-sm font-semibold" aria-label="Primary">
          <a href="/" class="hover:underline">Home</a>
          <a href="/#services" class="hover:underline">Services</a>
          <a href="/our-story/" class="hover:underline">Our Story</a>
          <a href="/team/" class="hover:underline">Team</a>
          <a href="/blog/" class="hover:underline">Blog</a>
          <a href="/contact/" class="hover:underline">Contact</a>
        </nav>

        <!-- Right actions -->
        <div class="flex items-center space-x-3">
          <a href="tel:{{ phone_tel }}" class="hidden lg:inline-flex items-center px-4 py-2 rounded border border-white border-opacity-40 hover:bg-white hover:bg-opacity-10" aria-label="Call Flood QRF">
            <span class="mr-2">ðŸ“ž</span>
            <span>{{ phone_display }}</span>
          </a>

          <a href="{{ jobber }}" class="inline-flex bg-white text-blue-900 font-bold px-5 py-2 rounded shadow hover:bg-gray-200" aria-label="Request Service">
            Request Service
          </a>

          <!-- Mobile menu button -->
          <button
            type="button"
            class="md:hidden inline-flex items-center justify-center w-10 h-10 rounded hover:bg-white hover:bg-opacity-10"
            aria-label="Open menu"
            onclick="window.__floodMenuToggle && window.__floodMenuToggle()"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile menu -->
      <div id="mobileMenu" class="md:hidden hidden bg-blue-900 border-t border-white border-opacity-10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 py-4 space-y-3 text-sm font-semibold">
          <a href="/" class="block hover:underline">Home</a>
          <a href="/#services" class="block hover:underline">Services</a>
          <a href="/our-story/" class="block hover:underline">Our Story</a>
          <a href="/team/" class="block hover:underline">Team</a>
          <a href="/blog/" class="block hover:underline">Blog</a>
          <a href="/contact/" class="block hover:underline">Contact</a>
          <a href="tel:{{ phone_tel }}" class="block hover:underline">ðŸ“ž {{ phone_display }}</a>
        </div>
      </div>
    </header>

    <!-- PAGE CONTENT -->
    {{ content | safe }}

    <!-- FOOTER -->
    <footer class="bg-blue-900 text-white pt-10 pb-8 mt-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 grid md:grid-cols-4 gap-8">
        <div>
          <div class="flex items-center space-x-3">
            <img src="/images/logo.png" alt="Flood QRF Logo" class="h-10 w-auto" />
            <span class="text-lg font-bold">Flood QRF</span>
          </div>
          <p class="mt-3 text-sm text-white text-opacity-80">San Diego Countyâ€™s water restoration experts. 24/7 emergency response.</p>
        </div>

        <div>
          <h3 class="font-bold mb-3">Services</h3>
          <ul class="space-y-2 text-sm text-white text-opacity-80">
            <li><a class="hover:underline" href="/#services">Water Mitigation</a></li>
            <li><a class="hover:underline" href="/#services">Structural Drying</a></li>
            <li><a class="hover:underline" href="/#services">Sewage Cleanup</a></li>
            <li><a class="hover:underline" href="/#services">Mold Remediation</a></li>
            <li><a class="hover:underline" href="/#additional-services">Additional Services</a></li>
          </ul>
        </div>

        <div>
          <h3 class="font-bold mb-3">Company</h3>
          <ul class="space-y-2 text-sm text-white text-opacity-80">
            <li><a class="hover:underline" href="/our-story/">Our Story</a></li>
            <li><a class="hover:underline" href="/team/">Team</a></li>
            <li><a class="hover:underline" href="/blog/">Blog</a></li>
            <li><a class="hover:underline" href="/contact/">Contact</a></li>
          </ul>
        </div>

        <div>
          <h3 class="font-bold mb-3">Contact</h3>
          <ul class="space-y-2 text-sm text-white text-opacity-80">
            <li>
              Phone: <a class="underline" href="tel:{{ phone_tel }}">{{ phone_display }}</a>
            </li>
            <li>
              Email: <a class="underline" href="mailto:{{ email }}">{{ email }}</a>
            </li>
            {% if address %}
            <li>{{ address }}</li>
            {% endif %}
            {% if license %}
            <li>License #{{ license }}</li>
            {% endif %}
            <li class="pt-2">
              <a href="{{ jobber }}" class="inline-flex bg-white text-blue-900 font-bold px-4 py-2 rounded shadow hover:bg-gray-200">Request Service</a>
            </li>
            <li class="pt-2 space-x-3">
              {% if instagram %}<a href="{{ instagram }}" class="underline">Instagram</a>{% endif %}
              {% if instagram and x_url %}<span class="text-white text-opacity-50">|</span>{% endif %}
              {% if x_url %}<a href="{{ x_url }}" class="underline">X</a>{% endif %}
            </li>
          </ul>
        </div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 mt-10 pt-6 border-t border-white border-opacity-10 text-center text-xs text-white text-opacity-70">
        <p>&copy; 2026 {{ company }}. All rights reserved.</p>
      </div>
    </footer>

    <script>
      (function () {
        var el = document.getElementById('mobileMenu');
        window.__floodMenuToggle = function () {
          if (!el) return;
          el.classList.toggle('hidden');
        };
      })();
    </script>
  </body>
</html>
