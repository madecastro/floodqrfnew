---
layout: layout.njk
title: {{ title }}
permalink: /
---

<!-- Hero -->
<section class="relative w-full overflow-hidden">
  <img src="{{ hero.image }}" alt="Flood QRF Hero" class="w-full max-h-screen object-cover object-center" />
  <div class="absolute inset-0 bg-black bg-opacity-50 flex flex-col justify-center items-center text-center text-white px-4">
    <h1 class="text-4xl md:text-6xl font-bold mb-4">{{ hero.heading }}</h1>
    <p class="text-lg md:text-2xl text-gray-200 mb-8 max-w-3xl">{{ hero.subheading }}</p>
    <div class="flex flex-col sm:flex-row gap-3">
      <a href="{{ site.jobber_url }}" class="bg-amber-400 text-blue-900 font-bold px-6 py-3 rounded shadow-lg hover:bg-amber-300 transition">
        {{ hero.primaryCta.label or "Request Service" }}
      </a>
      <a href="tel:{{ site.phone_tel }}" class="bg-white text-blue-900 font-bold px-6 py-3 rounded shadow-lg hover:bg-gray-200 transition">
        ðŸ“ž {{ hero.secondaryCta.label or "Call Now" }}
      </a>
    </div>
  </div>
</section>

<!-- Trust Bar -->
{% if trust_bar and trust_bar.length %}
<section class="bg-white border-b">
  <div class="max-w-6xl mx-auto px-4 py-10 grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
    {% for item in trust_bar %}
      <div class="rounded-lg border p-5 text-center shadow-sm">
        <div class="font-bold text-blue-900">{{ item.title }}</div>
        <div class="text-sm text-gray-600 mt-1">{{ item.text }}</div>
      </div>
    {% endfor %}
  </div>
</section>
{% endif %}

<!-- Services -->
<section id="services" class="py-20 bg-gray-50 scroll-mt-24">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-4xl font-semibold mb-4">{{ services_intro.heading or "Our Services" }}</h2>
    {% if services_intro.subheading %}<p class="text-lg text-gray-700 max-w-3xl mx-auto mb-12">{{ services_intro.subheading }}</p>{% endif %}
    <div class="grid md:grid-cols-3 gap-12">
      {% for service in services %}
        <div class="flex flex-col items-center bg-white p-8 rounded-lg shadow-sm border">
          {% if service.icon %}
            <img src="{{ service.icon }}" alt="" class="h-20 w-20 mb-5" />
          {% endif %}
          <h3 class="font-bold text-2xl">{{ service.title }}</h3>
          <p class="text-lg text-gray-600 mt-3">{{ service.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Additional Services -->
<section id="additional-services" class="py-20 bg-white scroll-mt-24">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-4xl font-semibold mb-4">{{ additional_services_intro.heading or "Additional Services" }}</h2>
    {% if additional_services_intro.subheading %}<p class="text-lg text-gray-700 max-w-3xl mx-auto mb-12">{{ additional_services_intro.subheading }}</p>{% endif %}
    <div class="grid md:grid-cols-3 gap-12">
      {% for service in additional_services %}
        <div class="flex flex-col items-center bg-gray-50 p-8 rounded-lg shadow-sm border">
          {% if service.icon %}
            <img src="{{ service.icon }}" alt="" class="h-20 w-20 mb-5" />
          {% endif %}
          <h3 class="font-bold text-2xl">{{ service.title }}</h3>
          <p class="text-lg text-gray-600 mt-3">{{ service.description }}</p>
        </div>
      {% endfor %}
    </div>

    <div class="mt-10">
      <a href="{{ site.jobber_url }}" class="inline-block bg-blue-900 text-white font-bold px-7 py-3 rounded shadow hover:bg-blue-800">Request Service</a>
    </div>
  </div>
</section>

<!-- How it works -->
{% if how_it_works and how_it_works.steps %}
<section class="py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl font-semibold text-center mb-12">{{ how_it_works.heading or "How It Works" }}</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {% for step in how_it_works.steps %}
        <div class="bg-white border rounded-lg p-8 shadow-sm">
          <div class="font-bold text-xl text-blue-900">{{ step.title }}</div>
          <p class="text-gray-700 mt-3">{{ step.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<!-- Our Story + Team + Blog previews -->
<section class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4 grid lg:grid-cols-3 gap-8">
    <div class="bg-gray-50 border rounded-lg p-8">
      <h3 class="text-2xl font-bold text-blue-900">{{ our_story_preview.heading }}</h3>
      <p class="text-gray-700 mt-3">{{ our_story_preview.text }}</p>
      {% if our_story_preview.bullets %}
        <ul class="mt-4 space-y-2 text-gray-700">
          {% for b in our_story_preview.bullets %}
            <li class="flex gap-2"><span class="text-blue-900">âœ“</span><span>{{ b }}</span></li>
          {% endfor %}
        </ul>
      {% endif %}
      <a href="{{ our_story_preview.cta_href }}" class="inline-block mt-6 underline text-blue-900 font-semibold">{{ our_story_preview.cta_label }}</a>
    </div>

    <div class="bg-gray-50 border rounded-lg p-8">
      <h3 class="text-2xl font-bold text-blue-900">{{ team_preview.heading }}</h3>
      <p class="text-gray-700 mt-3">{{ team_preview.text }}</p>
      <div class="mt-5 space-y-3">
        {% for m in team_preview.members | slice(0,3) %}
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-blue-900 text-white flex items-center justify-center font-bold">{{ m.name | first }}</div>
            <div>
              <div class="font-bold">{{ m.name }}</div>
              <div class="text-sm text-gray-600">{{ m.role }}</div>
            </div>
          </div>
        {% endfor %}
      </div>
      <a href="{{ team_preview.cta_href }}" class="inline-block mt-6 underline text-blue-900 font-semibold">{{ team_preview.cta_label }}</a>
    </div>

    <div class="bg-gray-50 border rounded-lg p-8">
      <h3 class="text-2xl font-bold text-blue-900">{{ blog_preview.heading }}</h3>
      <p class="text-gray-700 mt-3">{{ blog_preview.text }}</p>
      <div class="mt-5 space-y-4">
        {% for p in blog_preview.posts | slice(0,3) %}
          <a href="{{ p.href }}" class="block">
            <div class="font-bold">{{ p.title }}</div>
            <div class="text-sm text-gray-600">{{ p.excerpt }}</div>
          </a>
        {% endfor %}
      </div>
      <a href="{{ blog_preview.cta_href }}" class="inline-block mt-6 underline text-blue-900 font-semibold">{{ blog_preview.cta_label }}</a>
    </div>
  </div>
</section>

<!-- FAQ -->
{% if faq and faq.items %}
<section class="py-20 bg-gray-50">
  <div class="max-w-4xl mx-auto px-4">
    <h2 class="text-4xl font-semibold text-center mb-12">{{ faq.heading or "FAQ" }}</h2>
    <div class="space-y-4">
      {% for item in faq.items %}
        <details class="bg-white border rounded-lg p-6 shadow-sm">
          <summary class="font-bold cursor-pointer">{{ item.q }}</summary>
          <p class="mt-3 text-gray-700">{{ item.a }}</p>
        </details>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<!-- Service Area -->
<section class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-2 gap-10 items-center">
    <div>
      <h3 class="text-3xl font-semibold mb-4">Service Area</h3>
      <p class="text-lg text-gray-700 mb-6">
        We serve all of San Diego County â€” fast response and reliable support.
      </p>
      <div class="flex flex-col sm:flex-row gap-3">
        <a href="tel:{{ site.phone_tel }}" class="inline-block bg-blue-900 text-white font-bold px-6 py-3 rounded shadow hover:bg-blue-800 transition">ðŸ“ž Call Now</a>
        <a href="{{ site.jobber_url }}" class="inline-block bg-amber-400 text-blue-900 font-bold px-6 py-3 rounded shadow hover:bg-amber-300 transition">Request Service</a>
      </div>
    </div>
    <iframe src="{{ map }}" class="rounded-lg w-full h-80 border" allowfullscreen="" loading="lazy"></iframe>
  </div>
</section>
